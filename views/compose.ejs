<%-include("partials/header"); -%>
<h1>Compose</h1>

<form class="" action="" method="post">

  <label class="compose-label" for="title">Title</label>
  <div class="input-group mb-2">
    <input class="form-control" type="text" name="postTitle" placeholder="" id="title" required>
  </div>

  <label class="compose-label" for="title">Your name</label>
  <div class="input-group mb-2">
    <input class="form-control" type="text" name="postAuthor" placeholder="" id="Author" required>
  </div>

  <label class="compose-label" for="post">Post</label>
  <div class="input-group mb-3">
    <textarea class="form-control" name="postBody" placeholder="" id="post" rows="4" required></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%-include("partials/footer"); -%>
