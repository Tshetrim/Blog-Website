<%-include("partials/header"); -%>
  <h1>Home</h1>
  <p><%=starterContent%></p>
  <div class="text-wrap">
    <%for(const post of posts){%>
      <h1 class = "text-break" ><%=post.title%><h6>By: <%=post.author%></h6></h1>
      <p>
        <%=post.content.substring(0,100)+"..."%>
        <a href="/posts/<%=post.title%>">Read More</a>
      </p>
    <%}%>
  </div>
<div class=" text-right">
    <a class = "btn btn-info" href = "/compose" name="button">📝</a>
</div>

<%-include("partials/footer"); -%>
